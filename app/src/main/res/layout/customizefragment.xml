<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_margin="12sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:text="Subah"
            android:textColor="@color/lightGreen"
            android:textSize="21sp" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"></View>
        <Button
            android:id="@+id/custom_subah_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:onClick="timePicker"
            android:textColor="@color/lightgray"
            android:background="@color/Transparent"
            android:textSize="21dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_group_28"/>



    </LinearLayout>
    <View
        android:background="@color/lightgray"
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:alpha="0.5"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_margin="12sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:text="Duhar"
            android:textColor="@color/lightGreen"
            android:textSize="21sp" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"></View>

        <Button
            android:id="@+id/custom_duhar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/lightgray"
            android:background="@color/Transparent"
            android:textSize="21dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_group_28"/>

    </LinearLayout>
    <View
        android:background="@color/lightgray"
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:alpha="0.5"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_margin="12sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:text="Asr"
            android:textColor="@color/lightGreen"
            android:textSize="21sp" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"></View>

        <Button
            android:id="@+id/custom_asr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/lightgray"
            android:background="@color/Transparent"
            android:textSize="21dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_group_28"/>

    </LinearLayout>
    <View
        android:background="@color/lightgray"
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:alpha="0.5"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_margin="12sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:text="Maghrib"
            android:textColor="@color/lightGreen"
            android:textSize="21sp" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"></View>

        <Button
            android:id="@+id/custom_maghrib_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Transparent"
            android:text="00:00"
            android:textColor="@color/lightgray"
            android:textSize="21dp">

        </Button>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_group_28"/>

    </LinearLayout>
    <View
        android:background="@color/lightgray"
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:alpha="0.5"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_margin="12sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:text="Isha'a"
            android:textColor="@color/lightGreen"
            android:textSize="21sp" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"></View>

        <Button
            android:id="@+id/custom_isha_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/lightgray"
            android:background="@color/Transparent"
            android:textSize="21dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_group_28"/>
    </LinearLayout>
    <View
        android:background="@color/lightgray"
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:alpha="0.5"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_margin="12sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Silence duration (min)"
            android:textColor="@color/lightGreen"
            android:textSize="21sp" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"></View>

        <ImageButton
            android:id="@+id/subtractBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_minus" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:text="30"
            android:textColor="@color/lightgray"
            android:textSize="21dp" />

        <ImageButton
            android:id="@+id/addBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:outlineAmbientShadowColor="@color/cardview_shadow_end_color"
            android:background="@drawable/ic_plus"
            android:onClick="duration_Setter" />

    </LinearLayout>

    <Button
        android:id="@+id/save_custom"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/shape"
        android:onClick="sendMessage"
        android:text="Save"
        android:textSize="18dp"
        android:textColor ="@color/lightGreen"></Button>





</LinearLayout>